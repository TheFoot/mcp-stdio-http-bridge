{
  "name": "@thefoot/mcp-stdio-http-bridge",
  "version": "0.1.1",
  "description": "Universal bridge between stdio-based MCP clients (like Claude Code) and HTTP-based MCP servers",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "bridge",
    "proxy",
    "stdio",
    "http",
    "streamable-http",
    "ai",
    "llm",
    "claude",
    "anthropic"
  ],
  "homepage": "https://github.com/wsd-team-dev/mcp-stdio-http-bridge#readme",
  "bugs": {
    "url": "https://github.com/wsd-team-dev/mcp-stdio-http-bridge/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wsd-team-dev/mcp-stdio-http-bridge.git"
  },
  "license": "MIT",
  "author": "WSD Team <dev@wsd-team.com>",
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.js",
      "require": "./src/index.js"
    }
  },
  "main": "./src/index.js",
  "bin": {
    "mcp-bridge": "./src/cli.js",
    "mcp-stdio-http-bridge": "./src/cli.js"
  },
  "files": [
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "node src/cli.js",
    "test": "LOG_LEVEL=error node --test test/**/*.test.js",
    "test:coverage": "LOG_LEVEL=error c8 --check-coverage --lines 80 --functions 80 --branches 80 npm test",
    "test:watch": "LOG_LEVEL=error node --test --watch test/**/*.test.js",
    "lint": "eslint src test",
    "format": "prettier --write \"**/*.{js,json,md,yml}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,yml}\"",
    "quality": "npm run format && npm run lint -- --fix",
    "outdated": "npm outdated",
    "prepublishOnly": "npm run test:coverage"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "eslint": "^9.33.0",
    "prettier": "^3.6.2",
    "sinon": "^21.0.0"
  }
}
